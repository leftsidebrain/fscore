<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-info mb-5">
      <div class="container-fluid ms-4 me-4">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse d-flex justify-content-end" id="navbarSupportedContent">
          {{#if isLogin}}
            <a href="/logout" style="border: none;"><button class="btn btn-danger me-2">Logout</button></a>
          {{else}}
            <a href="/login" style="text-decoration: none;"><button class="btn btn-danger me-2">Login</button></a>
            <a href="/register" style="border: none;"><button class="btn btn-danger me-2">Register</button></a>
          {{/if}}
        </div>
      </div>
    </nav>

    <div class="container-fluid mt-5" style="background-color: rgba(216, 216, 216, 0.267);">
      {{#if isLogin}}
      <h1 class="text-center p-5">Collection</h1>
      <div class="container-lg p-3 d-flex flex-wrap justify-content-evenly">
        {{#each obj}}
          <div class="card p-3 w-30 mb-5 shadow-lg" style="width: 15rem;">
            <div class="card-body">
              <i class="fa-regular fa-calendar-check mb-3" style="font-size: 40px;"></i>
              <div class="row">
                  <h5 class="card-title"><a style="text-decoration: none;" href="/edit-task/{{id}}">{{name}}</a></h5>
                <div class="col-6">
                  <p class="card-text">3/9</p>
                </div>
                <div class="col-6 d-flex justify-content-center align-items-end" style="font-size: 25px;">
                  {{!-- <i class="fa-solid fa-clock"></i> --}}
                  <i class="fa-solid fa-circle-check"></i>
                </div>
              </div>
            </div>
          </div>
          {{/each}}
          <div class="card p-3 w-30 mb-5 shadow-lg" style="width: 15rem;">
            <div class="card-body d-flex justify-content-center align-items-center" style="background-color: none;">
              <a href="/add-collection" style="text-decoration: none;color: rgb(0, 0, 0);">
                <i class="fa-solid fa-square-plus" style="font-size: 50px;"></i></a>
            </div>
          </div>
        {{else}}
          <h1 class="text-center">Login First</h1>
        {{/if}}
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>