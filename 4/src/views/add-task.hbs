<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Blog</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-info mb-5">
      <div class="container-fluid ms-4 me-4">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse d-flex justify-content-end" id="navbarSupportedContent">
          <a href="/logout" style="text-decoration: none;"><button class="btn btn-danger me-2">Logout</button></a>
        </div>
      </div>
    </nav>

    <div class="container-lg">
      <div class="w-50 d-flex flex-column mx-auto">
        <h5>Add</h5>
        <form action="/add-task" method="post">
          <input type="hidden" value="{{id}}" name="id">
          <label class="form-label">To Do</label>
          <input type="text" name="to_do" class="form-control mb-3" placeholder="-add activity-">
          <div class=" d-flex justify-content-around align-items-center mb-3" style="border: 1px solid rgb(224, 224, 224); border-radius: 5px; height: 40px;">
            <label >Is Done?</label>
            <input type="checkbox" name="is_done" >
          </div>
          <div class="text-end">

          <button class="btn btn-success">Sumbit</button>
          </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>