<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Blog</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-info mb-5">
      <div class="container-fluid ms-4 me-4">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse d-flex justify-content-end" id="navbarSupportedContent">
          <a href="/logout" style="text-decoration: none;"><button class="btn btn-danger me-2">Logout</button></a>
        </div>
      </div>
    </nav>

    <div class="container-lg">
      <div class="w-50 d-flex flex-column mx-auto">

        <div class="row">
          <div style="background-color: rgb(238, 238, 238); border-radius: 10px;" class="col-1 d-flex align-items-center justify-content-center">
            <a style="text-decoration: none; color: black;" href="/"><i style="font-size: 25px;" class="fa-solid fa-circle-chevron-left"></i></a>
          </div>

          <div style="background-color: rgb(240, 240, 240); border-radius: 10px;" class="col-auto d-flex align-items-center ms-1 justify-content-center">
            <div class="me-3 d-flex flex-column">

              <a style="text-decoration: none; text-transform: uppercase;" href="/edit-collections/{{data.id}}"> <span>{{data.name}}</span></a>

              <span>{{doneTasks}}/{{totalTasks}}</span>
            </div>
            {{#if allDone}}
              <i class="fa-solid fa-circle-check" style="color: #48da68; font-size: 30px;"></i>
            {{else}}
              <i class="fa-solid fa-clock" style="font-size: 30px;"></i>
            {{/if}}
          </div>

          <div class="col-8 d-flex align-items-center justify-content-end">
            <button class="btn btn-danger"><a style="text-decoration: none; color: white;" href="/delete/{{data.id}}">Delete</a></button>
          </div>
        </div>

        <div class="row mt-5 mb-5 d-flex align-items-center" style="border: 2px solid rgb(5, 5, 145); height: 40px; border-radius: 50px;">
          <a style="text-decoration: none; margin-left: 10px;" href="/add-task/{{data.id}}"><i class="fa-solid fa-circle-plus"> add task</i></a>
        </div>

        <h5>Task Completed {{doneTasks}}</h5>
        {{#each data.tasks}}
          {{#if is_done}}
            <div class="row d-flex align-items-center justify-content-center mb-5" style="height: 3rem; border: 2px solid rgb(5, 5, 145); border-radius: 50px;">
              <div class="col-6">
                <span style="font-weight: 600;text-transform: capitalize;" class="ms-3">{{to_do}}</span>
              </div>
              <div class="col-6 text-end d-flex align-items-center justify-content-end">
                <i class="fa-solid fa-circle-check me-3" style="color: #48da68; font-size: 25px;"></i>
                <a class="me-3" href="/edit-todo/{{this.id}}"><i class="fa-regular fa-pen-to-square"></i></a>
                <a class="me-3" href="/delete-task/{{this.id}}"><i class="fa-solid fa-trash"></i></a>
              </div>

            </div>
          {{/if}}
        {{/each}}
        <h5>Task Uncompleted {{unDone}}</h5>
        {{#each data.tasks}}
          {{#unless is_done}}
            <div class="row d-flex align-items-center justify-content-center mb-3" style="height: 3rem; border: 2px solid rgb(5, 5, 145); border-radius: 50px;">
              <div class="col-6">
                <span style="font-weight: 600; text-transform: capitalize;" class="ms-3">{{to_do}}</span>
              </div>
              <div class="col-6 text-end d-flex align-items-center justify-content-end">

                <i class="fa-solid fa-clock me-3" style="font-size: 25px; color: rgb(5, 5, 145);"> </i>
                <a class="me-3" href="/edit-todo/{{this.id}}"><i class="fa-regular fa-pen-to-square"></i></a>
                <a class="me-3" href="/delete-task/{{this.id}}"><i class="fa-solid fa-trash"></i></a>
              </div>

            </div>
          {{/unless}}
        {{/each}}
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>